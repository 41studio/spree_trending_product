<% trending_product = trending_product. %>
  <% if trending_product.present? %>
    <div class="container-fluid">
      <div class="trending-wrap">
        <div class="title-content">
          <h1>Trending Now</h1>
          <p>Temukan Gaya Terbaikmu Disini</p>
          <div class="separator"></div>
        </div>
        <div class="container-fluid">
          <div class="row trending-img-wrap">
            <div class="col-md-3">
              <div class="img-trending-wrap">
                <%- trending_1 = trending_product.position%>
                <% if trending_1.position == 1 %>
                  <div class="img-trending" style="background-image: url('<%= trending_1.trending_product_image.url%>');">
                    <div class="text"><%= trending_1.name%><br><hr></div>
                      <div class="overlay"></div>
                    </div>
                <% else %>
                  <div class="img-trending" style="background-image: url('');">
                    <div class="text">Position 1<br><hr></div>
                      <div class="overlay"></div>
                    </div>
                <% end %>
              </div>
            </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
