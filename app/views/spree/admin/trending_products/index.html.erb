<% content_for :page_actions do %>
  <%= button_link_to t('spree_trending_product.new_trending_product'), new_object_url, { class: 'btn-success', icon: 'add', id: 'admin_new_trending_product_link' } %>
<% end %>

<% content_for :page_title do %>
  <%= t('spree_trending_product.title') %>
<% end %>

<table class="table sortable" id="listing_trending_products" data-hook data-sortable-link="<%= update_positions_admin_trending_products_url %>" >
  <thead>
  <tr data-hook="admin_trending_products_index_headers">
    <th colspan="2"><%= Spree.t(:image) %></th>
    <th><%= Spree.t(:name) %></th>
    <th><%= Spree.t(:position) %></th>
    <th><%= Spree.t(:published) %></th>
    <th data-hook="admin_trending_products_index_header_actions" class="actions"></th>
  </tr>
  </thead>
  <tbody>
  <% @trending_products.each do |trending_product|%>
    <tr id="<%= spree_dom_id trending_product %>" data-hook="admin_trending_products_index_rows">
      <td class="no-border">
        <span class="handle"></span>
      </td>
      <td class="align-center"><%= image_tag trending_product.trending_product_image, style: 'width: 120px; height: auto;' %></td>
      <td class="align-center"><%= link_to trending_product.name, object_url(trending_product) %></td>
      <td class="align-center"><%= link_to trending_product.position, object_url(trending_product) unless trending_product.product_id.blank? %></td>
      <td class="align-center"><%= trending_product.published ? Spree.t(:say_yes) : Spree.t(:say_no) %></td>
      <td data-hook="admin_trending_products_index_row_actions" class="actions">
        <%= link_to_edit trending_product, no_text: true, class: 'edit' %>
        &nbsp;
        <%= link_to_delete trending_product, no_text: true %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

